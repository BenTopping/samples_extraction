<p id="notice"><%= notice %></p>

<h1>Kits <small>Index</small></h1>

<%= bootstrap_link_to 'New Kit', new_kit_path %>
<br /> <br />
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Max num reactions</th>
      <th>Num reactions performed</th>
      <th>Kit type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.barcode %></td>
        <td><%= kit.max_num_reactions %></td>
        <td><%= kit.activities.count %></td>
        <td><%= kit.kit_type.name %></td>
        <td><%= bootstrap_link_to 'Show', kit %></td>
        <td><%= bootstrap_link_to 'Edit', edit_kit_path(kit) %></td>
        <!-- td><%= bootstrap_link_to 'Destroy', kit, method: :delete, data: { confirm: 'Are you sure?' } %></td -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


