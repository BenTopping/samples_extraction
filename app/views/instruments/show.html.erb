<p id="notice"><%= notice %></p>


<%= bootstrap_form_tag(url: activities_path, action: 'create') do |f| %>
  <%= f.text_field(:instrument_barcode, :value => @instrument.barcode, :readonly => true) %>
  <%= f.text_field(:kit_barcode, :placeholder => 'Scan a kit barcode') %>
  <%= f.submit("Create activity") %>
<% end %>

<%= bootstrap_link_to 'Edit', edit_instrument_path(@instrument) %>
