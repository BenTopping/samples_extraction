<p id="notice"><%= notice %></p>

<h1>Listing Assets</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Facts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.barcode %></td>
        <td>
          <%= render :partial => 'facts/facts', :locals => {:facts => asset.facts} %>
        </td>
        <td><%= bootstrap_link_to 'Show', asset %></td>
        <td><%= bootstrap_link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= bootstrap_link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= bootstrap_link_to 'New Asset', new_asset_path %>
