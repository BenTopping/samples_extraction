<p id="notice"><%= notice %></p>

<h1>Re-Racking</h1>

<%= bootstrap_form_for(@activity,  :url => {:action => 'create'}, :html => { :autocomplete => 'off'}) do |f| %>
  <div class="hidden">
    <%= f.text_field(:instrument_barcode, :value => @instrument.barcode, :readonly => true) %>
    <%= f.text_field(:kit_barcode, :value => @kit.barcode, :placeholder => 'Scan a kit barcode') %>
  </div>
  <input type="submit" class="btn btn-default" value="Start reracking" />
<% end %>

