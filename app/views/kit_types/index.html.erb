<p id="notice"><%= notice %></p>

<h1>Listing Kit Types</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Target type</th>
      <th>Activity type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kit_types.each do |kit_type| %>
      <tr>
        <td><%= kit_type.name %></td>
        <td><%= kit_type.target_type %></td>
        <td><%= kit_type.activity_type.name %></td>
        <td><%= bootstrap_link_to 'Show', kit_type %></td>
        <td><%= bootstrap_link_to 'Edit', edit_kit_type_path(kit_type) %></td>
        <td><%= bootstrap_link_to 'Destroy', kit_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

