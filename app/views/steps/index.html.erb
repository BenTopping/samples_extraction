<p id="notice"><%= notice %></p>

<h1>Listing Steps</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= bootstrap_link_to 'Show', step %></td>
        <td><%= bootstrap_link_to 'Edit', edit_step_path(step) %></td>
        <td><%= bootstrap_link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= bootstrap_link_to 'New Step', new_step_path %>
