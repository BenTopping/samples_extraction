<p id="notice"><%= notice %></p>

<h1>Listing Step Types</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Template</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @step_types.each do |step_type| %>
      <tr>
        <td><%= step_type.id %></td>
        <td><%= step_type.name %></td>
        <td><%= step_type.step_template %></td>
        <td><%= bootstrap_link_to 'Show', step_type %></td>
        <td><%= bootstrap_link_to 'Edit', edit_step_type_path(step_type) %></td>
        <td><%= bootstrap_link_to 'Destroy', step_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

