<div data-psd-component-class="TubeIntoRack" data-psd-component-parameters="<%= session[:data_params] %>">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= svg 'TubeRack' %>
    </div>
    <div class="col-md-6 col-xs-12">
      <div class="form-group" data-psd-component-class="BarcodeReader">
        <label for="tube_barcocde" class="input">Barcode at position <span class="location-description"></span></label>
        <input id="tube_barcocde" class="form-control" name="tube_barcode" type="text" autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-default reset-button">Reset</button>
      </div>
      <%= bootstrap_form_for [@activity, step_type, Step.new], action: 'create', class: 'step-template-form', html: {
              "data-psd-component-class": "StepButton"
            } do |f| %>
  <%= f.hidden_field :tube_printer_id, :value => @current_user.tube_printer_id %>
  <%= f.hidden_field :plate_printer_id, :value => @current_user.plate_printer_id %>

      <input type="hidden" name="step[data_action]" value="racking" id="step_data_action" />
        <input type="hidden" name="step[data_params]" id="step_data_params"
          value="<%= session[:data_params] %>" />

        <input type="hidden" name='step[state]' value='done' />
        <input type="hidden" name='step[data_action_type]' value='before_step' />
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table col-md-12">
      <thead>
        <th>Location</th><th>Barcode</th>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

</div>
