<li class="dropdown <%= [section[:name]].include?(controller_name) ? 'active' : '' %>">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t(section[:name]) %> <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% section[:options].each do |option_name, path| %>
      <li><%= link_to t('.' + option_name), path %></li>
    <% end %>
  </ul>
</li>
