<span data-psd-component-class="LoadingIcon" data-psd-component-parameters='{"containerIconClass" : "icon-login-refresh", "hideNodeSelector" : ".icon-login"}' class="user-status">
<div class="form-group" data-psd-component-class="UserStatus" data-psd-component-parameters='{"usernameSelector" : ".username", "fullNameSelector": ".fullname", "logoutSelector": ".logged-out", "loginSelector": ".logged-in", "changeLoginSelector": ".change-login", "roleSelector":".role", "tubePrinterSelector": ".tube-printer", "platePrinterSelector": ".plate-printer", "userServiceUrl": "<%= user_sessions_path %>", "sessionInfo": <%= @current_user ? @current_user.session_info.to_json : '{}'%>}'>
<div class="logged-out">
  <div href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <div class="login-button" style="">
      <span class="glyphicon glyphicon glyphicon-log-in icon-login" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-refresh icon-login-refresh" style="display:none;"></span>
      <span class='user-status-description-text'>Not logged</span>
    </div>
  </div>
  <ul class="dropdown-menu" data-psd-component-class="BarcodeReader">
    <li>
          <div class="">
	    <div class="form-group">
	      <label for="userBarcode">User barcode</label>
              <input name="userBarcode" autocomplete="off" class="form-control" type="text" placeholder="Scan a user barcode" />
	    </div>
          </div>
    </li>
    <li class="divider"></li>
    <li>
          <div class="">
            <p>
              <button id="login-button" class="btn btn-danger btn-block login">
		Login
	      </button>
            </p>
          </div>
    </li>
  </ul>
</div>


<div class="input-group logged-in" style="display:none;">
  <div href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <div class="change-login-status-button">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      <span class="user-status-description-text">Logged as <strong class="username"></strong></span>
    </div>

    <!-- span class="glyphicon glyphicon-chevron-down"></span -->
  </div>
  <ul class="dropdown-menu">
    <li>
      <div class="navbar-login">
        <div class="row">
          <div class="">
            <p class="text-center">
              <span class="glyphicon glyphicon-user icon-size"></span>
            </p>
          </div>
          <div class="col-lg-8">
            <p class="text-left"><strong class="fullname"></strong></p>
          </div>
          <div class="col-lg-8">
            <p class="text-left"><i class="role"></i></p>
          </div>

          <div class="col-lg-8">
            <p class="text-left">Tube printer: <i class="tube-printer"></i></p>
            <p class="text-left">Plate printer: <i class="plate-printer"></i></p>
          </div>
          <div class="col-lg-8">
            <p class="text-left">
              <%= bootstrap_link_to 'My activities', activities_path, class: 'btn btn-warning' %>
            </p>
          </div>

        </div>
      </div>
    </li>
    <li class="divider"></li>
    <li>
      <div class="navbar-logout">
        <div class="row">
          <div class="col-lg-12">
            <p>
              <button class="btn btn-danger btn-block logout">Logout</button>
            </p>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
</div>
</span>
