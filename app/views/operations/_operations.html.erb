<% operations.each do |operation| %>
<tr>
  <td class="col-md-3">
    <% if operation.action.action_type == 'addFacts' %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <% if operation.action.action_type == 'removeFacts' %>
      <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
    <% end %>
    <% if operation.action.action_type == 'createAsset' %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <% end %>


    <%= operation.action.action_type %>
  </td>
  <td class="col-md-3"><%= operation.asset.barcode %></td>
  <td class="col-md-6"><%= render :partial => 'facts/fact', :locals => { :fact => operation} %></td>
</tr>
<% end %>
