<% operations.each do |operation| %>
<tr>
  <td class="col-md-3">

    <% if operation.action_type == 'checkFacts' %>
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    <% end %>
    <% if operation.action_type == 'addFacts' %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <% if operation.action_type == 'removeFacts' %>
      <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
    <% end %>
    <% if operation.action_type == 'createAsset' %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <% end %>


    <%= operation.action_type %>
  </td>
  <td class="col-md-3"><%= operation.asset.barcode if operation.asset %></td>
  <td class="col-md-6" data-psd-component-class="AddFactToSearchbox">
    <%= render :partial => 'facts/fact', :locals => { :fact => operation} %>
    <!--div class="fact"><span class="label label-default"><%= operation.predicate %>:<%= operation.object %></span></div -->
  </td>
</tr>
<% end %>
